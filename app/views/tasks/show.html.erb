<!-- app/views/tasks/show.html.erb -->
<div class="header-box">
  <h2><%= @task.title %></h2>

  <%= link_to edit_task_path(@task), class: "btn btn-secondary" do %>
    <i class="fas fa-pencil-alt"></i> Edit this task
  <% end %>
</div>

<p class="details p-4"><%= @task.details %></p>

<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is completed
<% else %>
  <i class="far fa-square"></i> This task is not completed
<% end %>

<hr>

<%= link_to tasks_path do %>
  <i class="fas fa-undo-alt"></i> Back to list
<% end %>

